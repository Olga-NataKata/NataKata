{% schema %}
  {
    "name": "Three Media Section",
    "settings": [
      {
        "type": "text",
        "id": "section_text",
        "label": "Section Text",
        "default": "Three Media Section"
      },
      {
        "type": "image_picker",
        "id": "media_image_1",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "media_image_2",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "media_image_3",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Three Media Section"
      }
    ]
  }
  {% endschema %}
  
<div class="three-media-product-section">
  <p>{{ section.settings.section_text }}</p>
  <div class="three-media-container">
    <div class="three-media">  
      {% if section.settings.media_image_1 %} 
        <img src="{{ section.settings.media_image_1 | image_url: width: 1920 }}" width="1920" height="auto"alt="{{ section.settings.media_image_1.alt }}">
      {% endif %}
    </div>
    <div class="three-media">  
      {% if section.settings.media_image_2 %} 
        <img src="{{ section.settings.media_image_2 | image_url: width: 1920 }}" width="1920" height="auto"alt="{{ section.settings.media_image_2.alt }}">
      {% endif %}
    </div>
    <div class="three-media">  
      {% if section.settings.media_image_3 %} 
        <img src="{{ section.settings.media_image_3 | image_url: width: 1920 }}" width="1920" height="auto"alt="{{ section.settings.media_image_3.alt }}">
      {% endif %}
    </div>
  </div>
</div>

