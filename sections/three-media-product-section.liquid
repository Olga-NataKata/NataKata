{% schema %}
  {
    "name": "Three Media Section",
    "settings": [
      {
        "type": "text",
        "id": "section_text",
        "label": "Section Text",
        "default": "Three Media Section"
      },
      {
        "type": "image_picker",
        "id": "media_image_1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
        "id": "media_image_2",
        "label": "Image 2"
      },
      {
        "type": "image_picker",
        "id": "media_image_3",
        "label": "Image 3"
      }
    ],
    "presets": [
      {
        "name": "Three Media Section"
      }
    ]
  }
  {% endschema %}
  
<div class="three-media-product-section">
  <p>{{ section.settings.section_text }}</p>
  <div class="three-media-container">
    {% if section.settings.media_image_1 %}
      <div class="three-media1">
        <img src="{{ section.settings.media_image_1 | image_url: width: 1920 }}" alt="{{ section.settings.media_image_1.alt }}" width="1920" height="auto">
      </div>
    {% endif %}
    {% if section.settings.media_image_2 %}
      <div class="three-media2">
        <img src="{{ section.settings.media_image_2 | image_url: width: 1920 }}" alt="{{ section.settings.media_image_2.alt }}" width="1920" height="auto">
      </div>
    {% endif %}
    {% if section.settings.media_image_3 %}
      <div class="three-media3">
        <img src="{{ section.settings.media_image_3 | image_url: width: 1920 }}" alt="{{ section.settings.media_image_3.alt }}" width="1920" height="auto">
      </div>
    {% endif %}
  </div>
</div>

<style>
  .three-media-container {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(4, 1fr);
    gap: 20px;
  }

  .three-media1 {
    grid-column: span 6;
    grid-row: span 2;
    aspect-ratio: 2 / 1; /* Співвідношення 2:1 */
    position: relative; /* Для правильного відображення картинки */
  }

  .three-media2, .three-media3 {
    grid-column: span 3;
    grid-row: span 3;
    aspect-ratio: 1 / 1; /* Співвідношення 1:1 */
    position: relative; /* Для правильного відображення картинки */
  }

  .three-media1 img,
  .three-media2 img,
  .three-media3 img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Для заповнення контейнера без спотворення */
    position: absolute;
    top: 0;
    left: 0;
  }
</style>



