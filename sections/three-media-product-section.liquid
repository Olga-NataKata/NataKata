<section class="three-media-product-section">
  <div class="three-media-product-section__container">
    <!-- Media 1 -->
    <div class="block-media-1">
      <div class="block-media-1__content">
        <h2>{{ section.settings.heading_1 }}</h2>
        <p>{{ section.settings.description_1 }}</p>
        <div class="block-media-1__media">
          {% if section.settings.media_1_type == 'image' %}
            <img src="{{ section.settings.media_1_image | img_url: 'medium' }}" alt="{{ section.settings.heading_1 }}">
          {% elsif section.settings.media_1_type == 'video' %}
            <video autoplay muted loop playsinline>
              <source src="{{ section.settings.media_1_video_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% endif %}
        </div>
      </div>
    </div>
    <!-- Media 2 -->
    <div class="block-media-2">
      <div class="block-media-2__content">
        <h2>{{ section.settings.heading_2 }}</h2>
        <p>{{ section.settings.description_2 }}</p>
        <div class="block-media-2__media">
          {% if section.settings.media_2_type == 'image' %}
            <img src="{{ section.settings.media_2_image | img_url: 'medium' }}" alt="{{ section.settings.heading_2 }}">
          {% elsif section.settings.media_2_type == 'video' %}
            <video autoplay muted loop playsinline>
              <source src="{{ section.settings.media_2_video_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% endif %}
        </div>
      </div>
    </div>
    <!-- Media 3 -->
    <div class="block-media-3">
      <div class="block-media-3__content">
        <h2>{{ section.settings.heading_3 }}</h2>
        <p>{{ section.settings.description_3 }}</p>
        <div class="block-media-3__media">
          {% if section.settings.media_3_type == 'image' %}
            <img src="{{ section.settings.media_3_image | img_url: 'medium' }}" alt="{{ section.settings.heading_3 }}">
          {% elsif section.settings.media_3_type == 'video' %}
            <video autoplay muted loop playsinline>
              <source src="{{ section.settings.media_3_video_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

