{% schema %}
{
    "name": "Text and Gallery Section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Section Heading",
            "default": "Gallery Section"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Section Description",
            "default": "Add your gallery description here."
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Gallery Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        },
        {
            "type": "video",
            "name": "Gallery Video",
            "settings": [
                {
                    "type": "url",
                    "id": "video_url",
                    "label": "Video URL",
                    "info": "Insert the URL of a video hosted on Shopify or an external service."
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Text and Gallery Section",
            "category": "Custom"
        }
    ]
}
{% endschema %}

<div class="text-gallery-section">
    <div class="container">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.description }}</p>
        <div class="gallery-content">
            {% for block in section.blocks %}
                {% if block.type == 'image' %}
                    <div class="gallery-item gallery-image">
                        <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ section.settings.heading }}">
                    </div>
                {% elsif block.type == 'video' %}
                    <div class="gallery-item gallery-video">
                        <video controls>
                            <source src="{{ block.settings.video_url }}" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

<link rel="stylesheet" href="{{ 'text-gallery-section.css' | asset_url }}">
    