{% schema %}
{
    "name": "Text and Gallery Section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Section Heading",
            "default": "Gallery Section"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Section Description",
            "default": "Add your gallery description here."
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Gallery Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        },
        {
            "type": "video",
            "name": "Gallery Video",
            "settings": [
                {
                    "type": "url",
                    "id": "video_url",
                    "label": "Video URL",
                    "info": "Insert the URL of a video hosted on Shopify or an external service."
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Text and Gallery Section",
            "category": "Custom"
        }
    ]
}
{% endschema %}

<div class="text-gallery-section">
    <div class="container">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.description }}</p>
        <div class="gallery-content">
            {% for block in section.blocks %}
                {% if block.type == 'image' %}
                    <div class="gallery-item gallery-image">
                        <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ section.settings.heading }}" onclick="openFullscreenImage(this)">
                    </div>
                {% elsif block.type == 'video' %}
                    <div class="gallery-item gallery-video">
                        <video autoplay muted loop playsinline onclick="toggleFullscreen(this)">
                            <source src="{{ block.settings.video_url }}" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

<link rel="stylesheet" href="{{ 'text-gallery-section.css' | asset_url }}">

<script>
    function toggleFullscreen(video) {
        video.muted = !document.fullscreenElement; 

        if (!document.fullscreenElement) {
            video.currentTime = 0;
            if (video.requestFullscreen) {
                video.requestFullscreen();
            } else if (video.webkitRequestFullscreen) {
                video.webkitRequestFullscreen();
            } else if (video.msRequestFullscreen) {
                video.msRequestFullscreen();
            }
        }
    }

    function openFullscreenImage(image) {
        const fullscreenContainer = document.createElement('div');
        fullscreenContainer.classList.add('fullscreen-image-container');
        
        const fullscreenImage = document.createElement('img');
        fullscreenImage.src = image.src;
        fullscreenImage.classList.add('fullscreen-image');

        fullscreenContainer.appendChild(fullscreenImage);
        document.body.appendChild(fullscreenContainer);

        fullscreenContainer.onclick = function() {
            document.body.removeChild(fullscreenContainer);
        }
    }

    document.addEventListener('fullscreenchange', function() {
        const videos = document.querySelectorAll('.gallery-video video');
        
        if (!document.fullscreenElement) {
            videos.forEach(v => {
                v.muted = true;
            });
        }
    });
</script>
